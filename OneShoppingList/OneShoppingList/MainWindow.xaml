<Window x:Class="OneShoppingList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" Title="One Shopping List"
        DataContext="{Binding Main, Source={StaticResource Locator}}" Height="461" Width="710" ResizeMode="CanResize" ShowInTaskbar="True" WindowStartupLocation="CenterScreen" WindowState="Normal" WindowStyle="SingleBorderWindow">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Skins/MainSkin.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="6" x:Name="LayoutRoot">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0"  Text="PRODUCT ITEMS" FontWeight="Bold"/>
        <TextBlock Grid.Row="0" Margin="6,0,0,0" Grid.Column="1"  Text="PRODUCT DETAILS" FontWeight="Bold"/>
        <ListBox Margin="0,6,0,0" BorderThickness="0" 
                 HorizontalAlignment="Stretch" Background="Transparent" 
                 Grid.Column="0" Grid.Row="1"
                 ItemsSource="{Binding ShoppingItems}" SelectedItem="{Binding CurrentShoppingItem}" SelectedIndex="0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Width="200" Margin="0,0,3,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Column="0" TextBlock.FontSize="15" Text="{Binding caption}"/>
                        <TextBlock Grid.Column="1" TextBlock.FontSize="15" HorizontalAlignment="Right" Text="{Binding default_quantity}"/>
                        <TextBlock Grid.Column="0" Grid.Row="1" Text="{Binding category}"/>
                        <TextBlock Grid.Column="1" Grid.Row="1"  HorizontalAlignment="Right" Text="{Binding unit_size}"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
        <StackPanel Margin="6" Grid.Column="1" Grid.Row="1"  DataContext="{Binding CurrentShoppingItem}">
            <TextBlock Margin="0,0,0,0" Text="Name:"/>
            <TextBox Text="{Binding caption}" FontSize="15"/>
            <TextBlock Margin="0,6,0,0" Text="Category:"/>
            <TextBox Text="{Binding category}" FontSize="15"/>
            <TextBlock Margin="0,6,0,0" Text="Preferred Store:"/>
            <TextBox Text="{Binding preferred_shop}" FontSize="15"/>
            <TextBlock Margin="0,6,0,0" Text="Default Quantity:"/>
            <TextBox Text="{Binding default_quantity}" FontSize="15"/>
            <TextBlock Margin="0,6,0,0" Text="Unit Size:"/>
            <TextBox Text="{Binding unit_size}" FontSize="15"/>
        </StackPanel>
    </Grid>
</Window>
